        </activity>
        <activity
            android:name=".FormularioEventos"
            android:exported="true" />
        <activity
            android:name=".DetailsActivity"
            android:exported="true" />
        <activity
            android:name=".FormularioActivity"
            android:exported="true" />
        <activity
            android:name=".UsuariosActivity"
            android:label="Usuarios"
